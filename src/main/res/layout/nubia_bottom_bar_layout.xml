<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="@dimen/nubia_bottom_bar_height">
    <Button android:textSize="@dimen/nubia_text_size_medium_no_change" android:ellipsize="end" android:id="@+id/nubia_bottom_bar_mid_btn" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxWidth="@dimen/nubia_bottom_bar_button_max_width" android:minWidth="@dimen/nubia_bottom_bar_button_min_width" android:maxLines="1" android:layout_centerInParent="true" style="@style/Widget.Nubia.Button.Color1"/>
    <LinearLayout android:gravity="center_vertical" android:id="@+id/nubia_bottom_bar_left_layout" android:clickable="true" android:layout_width="56dp" android:layout_height="match_parent" android:layout_marginEnd="@dimen/nubia_bottom_bar_padding_start" android:layout_toStartOf="@+id/nubia_bottom_bar_mid_btn">
        <ImageView android:id="@+id/nubia_bottom_bar_left_image" android:layout_width="@dimen/nubia_bottom_bar_image_size" android:layout_height="@dimen/nubia_bottom_bar_image_size" android:scaleType="center" android:layout_marginStart="@dimen/nubia_bottom_bar_padding_start" android:layout_marginEnd="@dimen/nubia_bottom_bar_padding_end"/>
