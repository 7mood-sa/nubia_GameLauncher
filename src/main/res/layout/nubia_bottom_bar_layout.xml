    </LinearLayout>
    <LinearLayout android:gravity="center_vertical" android:id="@+id/nubia_bottom_bar_right_layout" android:clickable="true" android:layout_width="56dp" android:layout_height="match_parent" android:layout_marginStart="@dimen/nubia_bottom_bar_padding_start" android:layout_toEndOf="@+id/nubia_bottom_bar_mid_btn">
        <ImageView android:id="@+id/nubia_bottom_bar_right_divider" android:background="@drawable/nubia_bottom_bar_divider" android:visibility="gone" android:layout_width="2px" android:layout_height="24dp" android:layout_centerVertical="true"/>
        <ImageView android:id="@+id/nubia_bottom_bar_right_image" android:layout_width="@dimen/nubia_bottom_bar_image_size" android:layout_height="@dimen/nubia_bottom_bar_image_size" android:scaleType="center" android:layout_marginStart="@dimen/nubia_bottom_bar_padding_end" android:layout_marginEnd="@dimen/nubia_bottom_bar_padding_start"/>
    </LinearLayout>
</RelativeLayout>
