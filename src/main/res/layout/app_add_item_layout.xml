<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textSize="12dp" android:textColor="#e6fff0f2" android:gravity="center" android:id="@+id/title_name" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="14dp" android:layout_marginBottom="10dp" android:text="1个已添加"/>
    <View android:background="#1fffffff" android:layout_width="match_parent" android:layout_height="2px"/>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="60dp">
        <ImageView android:id="@+id/app_icon" android:layout_width="36dp" android:layout_height="36dp" android:src="@mipmap/ic_launcher" android:layout_centerVertical="true" android:layout_alignParentStart="true"/>
        <TextView android:textSize="15dp" android:textColor="#ffffffff" android:id="@+id/app_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="王者荣耀" android:layout_centerVertical="true" android:alpha="0.85" android:layout_marginStart="14dp" android:layout_toEndOf="@+id/app_icon"/>
        <ImageView android:id="@+id/app_switch" android:visibility="visible" android:clickable="true" android:layout_width="140dp" android:layout_height="30dp" android:src="@mipmap/switch_button" android:layout_centerVertical="true" android:layout_marginEnd="5dp" android:layout_alignParentEnd="true"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="140dp" android:layout_height="30dp" android:layout_centerVertical="true" android:layout_marginEnd="3dp" android:layout_alignParentEnd="true">
            <TextView android:textSize="12sp" android:textColor="#ffffffff" android:gravity="center_horizontal" android:layout_gravity="center" android:id="@+id/join_switch" android:clickable="false" android:layout_width="70dp" android:layout_height="16.33dp" android:text="@string/remove_switch"/>
            <TextView android:textSize="12sp" android:textColor="#ffffffff" android:gravity="center_horizontal" android:layout_gravity="center" android:id="@+id/remove_switch" android:clickable="false" android:layout_width="70dp" android:layout_height="16.33dp" android:text="@string/join_switch"/>
        </LinearLayout>
        <RelativeLayout android:layout_width="38dp" android:layout_height="38dp" android:layout_centerVertical="true" android:layout_marginEnd="5dp" android:layout_alignParentEnd="true">
            <ImageView android:id="@+id/app_radio_btn" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@mipmap/radio_select_button" android:layout_centerInParent="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <View android:id="@+id/bottom_line" android:background="#1fffffff" android:layout_width="match_parent" android:layout_height="2px"/>
</LinearLayout>
