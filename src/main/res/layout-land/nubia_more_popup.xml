<?xml version="1.0" encoding="utf-8"?>
<cn.nubia.commonui.widget.MorePopupRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:id="@+id/nubia_more_popup_panel" android:background="@drawable/nubia_popup_background" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <View android:id="@+id/nubia_more_popup_mock_status_bar" android:background="@android:color/transparent" android:clickable="true" android:layout_width="match_parent" android:layout_height="@dimen/nubia_status_bar_height"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/nubia_more_popup_top_View" android:clickable="true" android:layout_width="match_parent" android:layout_height="@dimen/nubia_action_bar_default_height"/>
        <View android:id="@+id/nubia_more_popup_top_divider" android:background="?attr/throughDivider" android:layout_width="match_parent" android:layout_height="1px"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/nubia_more_popup_dropdown" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
            <ListView android:id="@+id/nubia_more_popup_list" android:layout_width="match_parent" android:layout_height="match_parent" android:divider="?attr/throughDivider"/>
        </LinearLayout>
        <View android:id="@+id/nubia_more_popup_bottom_divider" android:background="?attr/throughDivider" android:layout_width="match_parent" android:layout_height="1px"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/nubia_more_popup_bottom_View" android:clickable="true" android:layout_width="match_parent" android:layout_height="@dimen/nubia_action_bar_split_height"/>
    </LinearLayout>
</cn.nubia.commonui.widget.MorePopupRelativeLayout>
